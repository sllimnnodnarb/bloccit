<h1>New Advertisement</h1><br>
  <div class="row">
    <%= form_for [@topic, @advertisement] do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter Advertisement title" %>
       </div><br>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter advertisement text" %>
       </div><br>
       <div class="form-group">
         <%= f.label :price %>
         <%= f.number_field :price, class: 'form-control', placeholder: "Enter advertisement price" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
    <% end %>
</div>
