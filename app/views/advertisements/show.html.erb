<h1><%= @advertisement.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p>$<%= @advertisement.price %>.00</p>
    <p><%= @advertisement.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_advertisement_path(@advertisement.topic, @advertisement), class: 'btn btn-success' %>
    <%= link_to "Delete Ad", [@advertisement.topic, @advertisement], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this advertisement?'} %>
  </div>
  <br><br>
  <p>How bout dah?</p>
</div>
