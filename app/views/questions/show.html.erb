<h1>
  <%= @question.title %> <br>
  <small>
     <br>
  </small>
</h1>
<div class="row">
  <div class="col-md-8">
    <p><%= @question.body %></p>
  </div><br>
  <div class="col-md-4">
    <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
    <%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this question?'} %>
 </div><br>
 <%= form_for @question do |f| %>
   <div class="form-group">
     <h4>Has this question been resolved? <%= f.check_box :resolved %></h4>
   </div>
<% end %>
</div>
