<h1>Topics</h1>
<br>
<% if user_is_authorized_for_topics? %>
  <%= link_to "Create a New Topic", new_topic_path, class: 'btn btn-default' %>
<% end %>
<br><br>
<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <%= render partial: 'topic', locals: { topic: topic } %>
    <% end %>
</div>
